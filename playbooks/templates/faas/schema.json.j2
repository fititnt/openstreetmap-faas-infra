{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JSON Schema for a JSON-LD API output",
  "description": "Early draft",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^@": {
      "type": [
        "string",
        "object"
      ]
    }
  },
  "properties": {
    "$id": {
      "type": "string"
    },
    "$schema": {
      "type": "string"
    },
    "data": {
      "type": [
        "array",
        "object"
      ]
    },
    "meta": {
      "type": "object"
    },
    "error": {
      "type": "object"
    }
  }
}